[{"data":1,"prerenderedAt":103},["Reactive",2],{"content-query-b288D15t3Z":3},{"_path":4,"_dir":5,"_draft":6,"_partial":6,"_locale":5,"title":7,"description":5,"body":8,"_type":98,"_id":99,"_source":100,"_file":101,"_extension":102},"/policy","",false,"個人情報の保護方針",{"type":9,"children":10,"toc":87},"root",[11,18,24,28,33,38,45,50,55,60,65,70,76],{"type":12,"tag":13,"props":14,"children":15},"element","h2",{"id":7},[16],{"type":17,"value":7},"text",{"type":12,"tag":19,"props":20,"children":21},"p",{},[22],{"type":17,"value":23},"介護・福祉の現場、あるいは地域との関わりにおいて、社会福祉法人おあしす新川の個人情報保護方針を以下に掲載いたします。",{"type":12,"tag":25,"props":26,"children":27},"adjust-line",{},[],{"type":12,"tag":13,"props":29,"children":31},{"id":30},"個人情報の取り扱いについて",[32],{"type":17,"value":30},{"type":12,"tag":19,"props":34,"children":35},{},[36],{"type":17,"value":37},"社会福祉法人おあしす新川は、個人の権利・利益を保護する為、個人情報保護方針を以下の通り定め、十分な配慮を行うと共に大切に保護し、適正な管理を行うことに努めます。",{"type":12,"tag":39,"props":40,"children":42},"h3",{"id":41},"個人情報の収集利用目的",[43],{"type":17,"value":44},"個人情報の収集・利用目的",{"type":12,"tag":19,"props":46,"children":47},{},[48],{"type":17,"value":49},"個人情報の取得は、適切な手段で収集し、利用目的を限定し、必要な範囲内で適切に取扱います。",{"type":12,"tag":39,"props":51,"children":53},{"id":52},"個人情報の安全対策",[54],{"type":17,"value":52},{"type":12,"tag":19,"props":56,"children":57},{},[58],{"type":17,"value":59},"個人情報への不正アクセス、個人情報の紛失・破壊・改ざん・漏えいの防止など安全管理、予防措置を講じるよう努めます。",{"type":12,"tag":39,"props":61,"children":63},{"id":62},"情報主体の権利尊重",[64],{"type":17,"value":62},{"type":12,"tag":19,"props":66,"children":67},{},[68],{"type":17,"value":69},"個人情報の収集・利用・提供の各場面において、その情報を提供した本人が適切に関与し得るよう努めます。",{"type":12,"tag":39,"props":71,"children":73},{"id":72},"個人情報に関する法令規範の遵守および継続的改善",[74],{"type":17,"value":75},"個人情報に関する法令・規範の遵守および継続的改善",{"type":12,"tag":19,"props":77,"children":78},{},[79,81,85],{"type":17,"value":80},"個人情報保護に関する法令・規範を遵守します。",{"type":12,"tag":82,"props":83,"children":84},"br",{},[],{"type":17,"value":86},"\nまた、個人情報保護に関する内部規程を定め、職員の教育・研修を徹底し、継続的に見直し、改善します。",{"title":5,"searchDepth":88,"depth":88,"links":89},2,[90,91],{"id":7,"depth":88,"text":7},{"id":30,"depth":88,"text":30,"children":92},[93,95,96,97],{"id":41,"depth":94,"text":44},3,{"id":52,"depth":94,"text":52},{"id":62,"depth":94,"text":62},{"id":72,"depth":94,"text":75},"markdown","content:policy.md","content","policy.md","md",1738930417657]